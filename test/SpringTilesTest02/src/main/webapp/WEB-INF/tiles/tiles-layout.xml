<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC
	"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
	"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
	
<tiles-definitions>
	<definition name="layout" template="/WEB-INF/views/layout.jsp">
		<put-attribute name="css" value="/WEB-INF/views/css/css.jsp"/>
		<put-attribute name="header" value="/WEB-INF/layout/header.jsp"/>
		<put-attribute name="menu" value="/WEB-INF/layout/menu.jsp"/>
		<put-attribute name="content" value=""/>
		<put-attribute name="footer" value="/WEB-INF/layout/footer.jsp"/>
	</definition>
	
	<definition name="airlayout" extends="layout">
		<put-attribute name="content" value="/WEB-INF/views/air/{1}.jsp" />
	</definition>
</tiles-definitions>